{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}


{% block title %}Contact Us{% endblock %}

{% block body %}

<div class="col-sm-12 text-center my-5 mx-4">
    <h1>Leave a message to us.</h1>
    <h3>We'll get in touch with you as soon as we can.</h3>
</div>

    {{ form_start(form) }}

    <div class="row justify-content-center">
            <div class="col-sm-4">
                {{ form_row(form.name) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.email) }}
            </div>
                        </div>
    <div class="row justify-content-center">
        <div class="col-sm-8">
            {{ form_row(form.message) }}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-4 text-center">
            {{ form_row(form.submit) }}
        </div>
    </div>

            {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
